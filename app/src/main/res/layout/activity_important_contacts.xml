<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ImportantContacts">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainImportantContactContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#EDEDED">

        <TextView
            android:id="@+id/titleImportantContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BPKIHS"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/numberImportantContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="025-525555"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/titleImportantContact"
            app:layout_constraintStart_toStartOf="@id/titleImportantContact"/>


        <TextView
            android:id="@+id/callButtonImportantContact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:background="@drawable/call_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/green"
            app:layout_constraintTop_toTopOf="@id/titleImportantContact"
            app:layout_constraintBottom_toBottomOf="@id/numberImportantContact"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>