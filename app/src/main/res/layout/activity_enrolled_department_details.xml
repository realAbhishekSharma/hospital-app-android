<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EnrolledDepartmentDetails">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutEnrolledDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/detailsTabEnrolled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/reportsTabEnrolled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reports"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/medicineTabEnrolled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/activityTabEnrolled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"/>


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/tabViewPagerEnrolled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutEnrolledDepartment"
        />


</androidx.constraintlayout.widget.ConstraintLayout>