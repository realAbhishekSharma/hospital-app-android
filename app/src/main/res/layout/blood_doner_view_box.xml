<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainImportantContactContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#EDEDED">

        <TextView
            android:id="@+id/bloodGroupViewBox"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="AB+"
            android:textSize="20dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/donnerNameViewBox"
            app:layout_constraintBottom_toBottomOf="@id/donnerAddressViewBox"/>

        <View
            android:id="@+id/lineSeparator"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="AB+"
            android:textSize="20dp"
            android:background="@color/green"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/bloodGroupViewBox"
            app:layout_constraintTop_toTopOf="@id/donnerNameViewBox"
            app:layout_constraintBottom_toBottomOf="@id/donnerAddressViewBox"/>

        <TextView
            android:id="@+id/donnerNameViewBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/lineSeparator"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/donnerAddressViewBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/donnerNameViewBox"
            app:layout_constraintStart_toStartOf="@id/donnerNameViewBox"/>


        <TextView
            android:id="@+id/callDonnerBox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:background="@drawable/call_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/green"
            app:layout_constraintTop_toTopOf="@id/donnerNameViewBox"
            app:layout_constraintBottom_toBottomOf="@id/donnerAddressViewBox"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>