<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!--Account View-->
        <LinearLayout
            android:id="@+id/accountView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/lightTransparent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_gravity="top">

                <TextView
                    android:id="@+id/userNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/userPhoneView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9810111010"/>

                <TextView
                    android:id="@+id/userAddressViewInAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biratnagar"/>

                <TextView
                    android:id="@+id/getLiveLocationInAccount"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:background="@drawable/my_location_icon"
                    android:backgroundTint="@color/green"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/black"/>


        <!--Account Section-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/accountDetails"
                android:text="Account Details"
                style="@style/accountOptionView"/>

            <TextView
                android:id="@+id/myAccount"
                android:text="My Account"
                style="@style/accountOptionView"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/bloodDonnerAccount"
                android:text="Blood Donner Account"
                style="@style/accountOptionView"/>

            <TextView
                android:id="@+id/admitToHospital"
                android:text="Admit to Hospital"
                style="@style/accountOptionView"/>

            <TextView
                android:id="@+id/patientHistory"
                android:text="Patient History"
                style="@style/accountOptionView"/>

            <TextView
                android:id="@+id/reportsHistory"
                android:text="Reports History"
                android:visibility="gone"
                style="@style/accountOptionView"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/setting"
                android:text="Setting"
                style="@style/accountOptionView"/>

            <TextView
                android:id="@+id/about"
                android:text="About"
                style="@style/accountOptionView"/>

            <TextView
                android:id="@+id/logoutButton"
                android:text="Log Out"
                style="@style/accountOptionView"/>



        </LinearLayout>


    </LinearLayout>


</ScrollView>